<h1>All Users</h1>
<h2><%= link_to "Topics", topics_path %></h2>
<table class='table table-bordered table-hover'>
	<tr>
		<td>User</td>
		<td>User-name</td>
		<td>User-email</td>
	</tr>
	<% @users.each do |user| %>
		<tr>
			<td><%= gravatar_for user %></td>
			<td><%= link_to user.username, user_path(user) %></td>
			<td><%= user.email%></td>
		</tr>
	<% end %>
	<%= paginate @users %>
</table>